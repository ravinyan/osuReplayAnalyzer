<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        mc:Ignorable="d"
        Title="ReplayAnalyzerUpdater" Height="250" Width="600">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="100">
            <TextBlock x:Name="notificationText" FontSize="16"></TextBlock>
        </Grid>
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Grid.Row="0" Grid.Column="0" x:Name="updateButton" Width="125" Height="30" Margin="5">Update</Button>
            <Button Grid.Row="0" Grid.Column="1" x:Name="changelogButton" Width="125" Height="30" Margin="5">See Latest Changelog</Button>
        </StackPanel>
    </Grid>
</Window>
