<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1080" MinHeight="600px"
        Width ="1920" MinWidth ="800px"
        SizeToContent="WidthAndHeight"
        Background="Black">
    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Name="canva" Background="cyan">
            <Grid.RowDefinitions>
                <RowDefinition Name="canvaRow" Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Margin="5"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Width="20" Height="20" Name="button" Click="OnClick">
                <Polygon Width="5" Height="5" Points="0,0 80,50, 0,100" Stroke="Black" Fill="Black" />
                <Button.Resources>
                    
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="50"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock VerticalAlignment="Center" Grid.Column="1" Name="songTimer" >Not Playing...</TextBlock>
        </Grid>
        

        <StackPanel Margin="20">
            <MediaElement x:Name="musicPlayer"></MediaElement>
        </StackPanel>
        
        <Grid.Background>
            <ImageBrush x:Name="background"></ImageBrush>
        </Grid.Background>
        
    </Grid>
</Window>
